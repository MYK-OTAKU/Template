# Configuration de la base de données
# Choisir le type de base de données : 'sqlite' ou 'postgres'
DB_TYPE=sqlite

# Configuration SQLite (base de données locale)
SQLITE_PATH=./database.sqlite

# Configuration PostgreSQL/Supabase
DB_NAME=dashboard_template_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_TIMEZONE=+00:00

# Configuration JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration CORS
CORS_ORIGIN=http://localhost:5173

# Configuration de l'email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Configuration de l'application
APP_NAME=Dashboard Template
APP_URL=http://localhost:3000

